  }
  
  function showPhilippineSea() {
    console.log('philippine sea');
    mymap.flyTo(getCoordinate(data[5].location),5);
  }
  
  function showLeyteGulf() {
    console.log('Leyte gulf');
    mymap.flyTo(getCoordinate(data[6].location),5);
  }
  
  function showOpTenGo() {
    console.log('operation ten go');
    mymap.flyTo(getCoordinate(data[7].location),5);
  }
  
  function showOkinawa() {
